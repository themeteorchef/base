@import 'jeet'
//edit()

//Yeah I dislike to using !important but sometimes
//It gets the job done right with framworks

//Form segment
.registerSegment
  span(1/2)
  shift(1/4)
  background: #F5F5F5 !important
  .field
    col(1/2 1/2, cycle: 2)
    label
      span(1/1)
      shift(1/7)
    .icon
      shift(1/8) 

//Error Handeling
.input, .error
  width: 70%

label[class~="error"]
  span(1/1)
  shift(1/4)
  margin-top: 2px
  left: 0% !important
  color: red
  background: rgba(250, 10, 10, 0.03)
  border: 1px solid rgba(250, 10, 10, 0.10)
  border-radius: 3px;

//Bottom segment
.registerButtonContainer
  span(1/1)
  margin-top: 25px
  button
    column(1/3 1/2)
    shift(1/3)

.alreadyMember
  span(1/1)
  text-align: center
